// Адреса
#define D_Call 0x80         //Признак адресации к данному устройству (TWI)
#define G_Call 0x90         //Признак глобальной адресации (TWI)
#define D_Responce	0xB8	// Передаем в ответ на запрос (TWI) 
#define Addr_Responce	0xA8	// Адреспри передаче (TWI) 

#define TO_MON  254		// Адрес для работы в режиме монитора

#define RES_OK  1
#define RES_ERR 0 




